<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.criteo.pom</groupId>
        <artifactId>hadoop-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../parent-poms/parent-poms/hadoop-parent/pom.xml</relativePath>
    </parent>
    <groupId>com.criteo.java</groupId>
    <artifactId>garmadon</artifactId>
    <!-- DO NOT CHANGE THE VERSION. THIS EXACT ONE IS EXPECTED BY THE JMOAB -->
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>garmadon</name>
    <description>Template for java program to be build by the jmoab</description>

    <modules>
        <module>schema</module>
        <module>jvm-statistics</module>
        <module>frameworks</module>
        <module>agent</module>
        <module>forwarder</module>
        <module>readers</module>
        <module>test</module>
    </modules>

    <inceptionYear>2017</inceptionYear>
    <organization>
        <name>Criteo</name>
    </organization>

    <properties>
        <netty-all.version>4.1.28.Final</netty-all.version>
        <bytebuddy.version>1.8.16</bytebuddy.version>
        <spark.version>2.2.2</spark.version>
        <es.version>6.3.1</es.version>
        <logback.version>1.2.3</logback.version>
        <prometheus.version>0.4.0</prometheus.version>
        <maria-java-client.version>2.2.6</maria-java-client.version>
        <oshi.version>3.6.0</oshi.version>
        <java-hamcrest.version>2.0.0.0</java-hamcrest.version>

        <!-- tests -->
        <junit.version>4.12</junit.version>
        <mockito.version>1.10.19</mockito.version>
    </properties>


    <dependencies>
        <!-- Test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>${mockito.version}</version>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>net.bytebuddy</groupId>
                    <artifactId>byte-buddy</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>net.bytebuddy</groupId>
                    <artifactId>byte-buddy-agent</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.0</version>
                <configuration>
                    <environmentVariables>
                        <USER>lakeprobes</USER>
                        <NM_HOST>hostname</NM_HOST>
                        <CRITEO_DC>pa4</CRITEO_DC>
                        <CRITEO_ENV>preprod</CRITEO_ENV>
                    </environmentVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
